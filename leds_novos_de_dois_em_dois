int posicaoParaIndice(int linha, int coluna) {
  int matriz[7][7] = {
    { 0, 2, 4, 6, 8, 10, 12 },
    { 30, 28, 26, 24, 22, 20, 18 },
    { 36, 38, 40, 42, 44, 46, 48 },
    { 66, 64, 62, 60, 58, 56, 54 },
    { 72, 72, 76, 78, 80, 82, 84 },
    { 102, 100, 98, 96, 94, 92, 90 },
    { 108, 110, 112, 114, 116, 118, 120 }
  };
  return matriz[linha][coluna];
}
